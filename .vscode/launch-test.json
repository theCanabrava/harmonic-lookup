{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--inspect-brk",
                "${workspaceFolder}/tests/**/*spec.ts"
            ],
            "port": 9229,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}